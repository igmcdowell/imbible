{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "allowJs": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    // Necessary to make redux types work.
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "scripts/*.ts"],
  "exclude": ["node_modules"]
}
